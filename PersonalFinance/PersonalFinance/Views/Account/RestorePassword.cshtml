@model PasswordRestoreModel

<form class="row" id="restorePassword" asp-action="RestorePassword" asp-controller="Account" method="post" enctype="multipart/form-data">

  @Html.AntiForgeryToken()

  <div class="form-horizontal col-sm-4">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
      <label class="col-form-label">Email</label>
      <input asp-for="@Model.Email" placeholder="Email" class="form-control" />
      <span asp-validation-for="Email"></span>
    </div>

  </div>
  <div class="col-sm-10">
    <button class="btn btn-success relative" id="editProfleSubmit" type="submit">
      Restore
    </button>
  </div>

</form>

