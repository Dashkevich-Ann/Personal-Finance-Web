@model EditProfileModel


<form id="editProfileForm" asp-action="EditProfile" asp-controller="Account" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="modal-body form-horizontal">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            @Html.HiddenFor(model => model.UserId)
            <label class="col-sm-12 col-form-label">First name</label>
            <div class="col-sm-10">
                <input asp-for="@Model.FirstName" placeholder="First Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Last name</label>
            <div class="col-sm-10">
                <input asp-for="@Model.LastName" placeholder="Last Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Email" placeholder="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Date of birth</label>
            <div class="col-sm-10">
                <input asp-for="@Model.DateOfBirth" type="date" placeholder="Date of birth" class="form-control"
                       value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd"): string.Empty)" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Login</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Login" placeholder="Login" class="form-control" />
            </div>
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Password</label>
            <div class="col-sm-10">
                <input placeholder="********" class="form-control" disabled />
            </div>
            @Html.HiddenFor(x => x.Password)
            <button class="btn btn-process d-block" id="changePasswordProfile" type="button">Change Password</button>
        </div>
    </div>
    <div>
        <button class="btn btn-success relative" id="editProfleSubmit" type="submit">
            Save
        </button>
    </div>

</form>
