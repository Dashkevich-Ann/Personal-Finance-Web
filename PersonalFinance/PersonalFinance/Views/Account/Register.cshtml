@model RegisterModel
@{
    ViewBag.Title = "Register";
}
<h1>Register</h1>

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="col-4">First name</label>
        <input class="col-8" asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label class="col-4">Last name</label>
        <input class="col-8" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label class="col-4">Email*</label>
        <input class="col-8" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label class="col-4">Login*</label>
        <input class="col-8" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group">
        <label class="col-4">Password*</label>
        <input class="col-8" asp-for="Password" autocomplete="new-password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label class="col-4">ConfirmPassword*</label>
        <input class="col-8" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="form-group">
        <label class="col-4">Date of birth</label>
        <input class="col-8" asp-for="DateOfBirth" 
               value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd"): string.Empty)"/>
        <span asp-validation-for="DateOfBirth"></span>
    </div>

    <div>
        <input type="submit" value="Register" />
    </div>

</form>
