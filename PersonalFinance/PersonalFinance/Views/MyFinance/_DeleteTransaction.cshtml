@model BusinessLayer.Models.TransactionDTO
@{
    var transactionId = Model.TransactionId;
    var trType = (int)Model.Category.Type;
}
<div class="modal-content">

    <!--Modal Header Start-->
    <div class="modal-header">
        <h4 class="modal-title">Delete User</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <!--Modal Header End-->
    <div class="modal-body form-horizontal">
        <h3>Are you sure to delete transaction for @Model.DisplayAmount for @Model.Category.Name</h3>
    </div>
    <!--Modal Footer Start-->
    <div class="modal-footer">
        <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
        <button class="btn btn-success relative" id="trDeleteConfirm" data-id="@transactionId" data-type="@trType">
            OK
        </button>
    </div>
</div>

