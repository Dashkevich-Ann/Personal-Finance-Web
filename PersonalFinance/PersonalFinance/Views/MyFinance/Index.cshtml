@{
  Layout = "_MyFinanceLayout";
}

<div class="transaction-wrapper row">
  <div class="col-md-12 transaction-grid">
    <table class="table" id="transactionTable">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Type</th>
          <th scope="col">Category</th>
          <th scope="col">Comment</th>
          <th scope="col">Amount</th>
          <th scope="col">Id</th>
          <th scope="col">Value</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th colspan="2" class="text-secondary"></th>
          <th colspan="3" style="text-align:right">Total:</th>
          <th></th>
        </tr>
      </tfoot>
    </table>
    <div class="btn-toolbar justify-content-start" id="transactionBtnGroup">
      <button class="btn btn-success" id="add-button" data-modal="new-transaction-modal">Add</button>
      <button class="btn btn-primary" id="edit-button" data-modal="edit-transaction-modal">Edit</button>
      <button class="btn btn-danger" id="delete-button" data-modal="confirm-removal-modal">Delete</button>
    </div>
  </div>
</div>

<partial name="_ModalPartial" model="@string.Format("confirm-removal-modal")" />
<partial name="_ModalPartial" model="@string.Format("edit-transaction-modal")" />
<partial name="_ModalPartial" model="@string.Format("new-transaction-modal")" />


@section Scripts{
  <script src="~/js/transactionGrid.js" asp-append-version="true"></script>
}